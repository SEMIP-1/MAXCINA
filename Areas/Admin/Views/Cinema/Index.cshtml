@model List<Cinemas>

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Cinemas Dashboard</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/admin/cinema/create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Cinema Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Address</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Id Section-->
                            <th scope="row">@item.Id</th>
							<!-- Name Section-->
                            <td>@item.Name</td>
							<!-- Description Section-->
                            @if (item.Description is not null && item.Description.Length >= 50)
                            {
                                <td>@item.Description.Substring(0, 50)...</td>
                            }
                            else
                            {
                                <td>@item.Description</td>
                            }
							<!-- Address Section-->
                            @if (item.Address is not null && item.Address.Length >= 20)
                            {
                                <td>@item.Address.Substring(0, 20)...</td>
                            }
                            else
                            {
                                <td>@item.Address</td>
                            }
							<!-- Actions Section-->
                            <td>
                                <!-- Edit Section-->
                                <a href="/Admin/Cinema/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
							    <!-- Delete Section-->
                                <button type="button" class="btn btn-danger delete-btn" data-id="@item.Id">Delete</button>
                            </td>       
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Java Script-->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach(btn => {
            btn.addEventListener("click", function () {
                const Id = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won’t be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to your delete action
                        window.location.href = `/Admin/Cinema/Delete/${Id}`;
                    }
                });
            });
        });
    });
</script>