@model List<Actors>
@{
    ViewData["Title"] = "Actors Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Actors Dashboard</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/admin/Actors/create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Bio</th>
                        <th scope="col">News</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Id Section-->
                            <th scope="row">@item.ActorsId</th>
                            <!-- Name Section-->
                            <td>@item.FirstName @item.LastName</td>
                            <!-- bio Section-->
                            @if (item.Bio is not null && item.Bio.Length >= 50)
                            {
                                <td>@item.Bio.Substring(0, 50)...</td>
                            }
                            else
                            {
                                <td>@item.Bio</td>
                            }
                            <!-- News Section-->
                            @if (item.News is not null && item.News.Length >= 50)
                            {
                                <td>@item.News.Substring(0, 50)...</td>
                            }
                            else
                            {
                                <td>@item.News</td>
                            }
                            <!--Action Section-->
                            <td>
                                <!-- Edit Section-->
                                <a href="/Admin/Actors/Edit/@item.ActorsId" type="button" class="btn btn-warning">Edit</a>
                                <!-- Delete Section-->
                                <button type="button" class="btn btn-danger delete-btn" data-id="@item.ActorsId">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach(btn => {
            btn.addEventListener("click", function () {
                const ActorsId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won’t be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to your delete action
                        window.location.href = `/Admin/Actors/Delete/${ActorsId}`;
                    }
                });
            });
        });
    });
</script>