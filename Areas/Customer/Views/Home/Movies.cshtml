@model List<Movies>
@{
    ViewData["Title"] = "All Movies Page";

}

<!-- Header-->

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">

                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <!-- Sale badge-->
                        <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; left: 0.5rem">@item.Category.Name</div>
                        <!-- Product image-->
                        <img class="card-img-top" src="~/img/customer/movies/@item.ImgUrl" alt="@item.ImgUrl" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                                <span class="text-muted text-decoration-line-through">@(item.Price * 1.2)</span>
                                @item.Price
                            </div>
                            <div>
                                <!-- Product Start Date/End Date-->
                            </div>
                            <h5 class="text-muted text-decoration">@item.StartDate</h5>
                            <h5 class="text-muted text-decoration">@item.EndDate</h5>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="https://localhost:7116/customer/home/moviedetails/@item.MoviesId">More Details</a></div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>