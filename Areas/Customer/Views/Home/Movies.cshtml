@model MoviesFilterVM
@{
    ViewData["Title"] = "All Movies Page";

}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">MAXCINA Movies</h1>
            <p class="lead fw-normal text-white-50 mb-0">YOU ARE ONE CLICK AWAY</p>
        </div>
    </div>
</header>
<!-- Filter Section -->
<section class="py-3 filter-bar">
    <div class="container">
        <div class="row" style="background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important;">
            <div class="col-12">
                <form>
                    <div class="row">
                        <!-- Movie Name -->
                        <div class="col-md-3">
                            <input type="text" class="form-control" placeholder="Movie Name" name="Name" value="@ViewBag.Name">
                        </div>

                        <!-- Price Range -->
                        <div class="col-md-2">
                            <input type="number" class="form-control" placeholder="Min Price" name="MinPrice" value="@ViewBag.MinPrice">
                        </div>
                        <div class="col-md-2">
                            <input type="number" class="form-control" placeholder="Max Price" name="MaxPrice" value="@ViewBag.MaxPrice">
                        </div>

                        <!-- Category -->
                        <div class="col-md-2">
                            <select name="categoryId" class="form-control">
                                <option value="">--Select Category--</option>
                                @foreach (Categories item in Model.categories)
                                {
                                    if (item.Id == ViewBag.CategoryId)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
									}

                                }
                            </select>
                        </div>

                        <!-- Cinema -->
                        <div class="col-md-2">
                            <select name="cinemaId" class="form-control">
                                <option value="">--Select Cinemas--</option>
                                @foreach (var item in Model.cinemas)
                                {
                                    @if (item.Id == ViewBag.CinemaId)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- Rating -->
                        <div class="col-md-2"> 
                            <select name="rating" class="form-control"> 
                                 <option value="">Any Rating</option> 
                                 <option>option 1</option> 
                                <option>option 2</option> 
                                <option>option 3</option> 
                            </select> 
                        </div> 
                        <!-- Hot Checkbox -->
                        <div class="col-md-1">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="isTranding" value="true" @((ViewBag.isTranding as bool?) ?? false ? "checked" : "")>
                                
                                <label class="form-check-label">Tranding</label>
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-dark w-100">Filter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (Model.movies.Any())
            {
                @foreach (var item in Model.movies)
                {
                    <div class="col mb-5">
                        <div class="card h-100">

                            <!-- Cinema.Name badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; left: 0.5rem">@item.Cinema.Name</div>
                            <!-- Category.Name badge-->
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.Category.Name</div>
                            <!-- Movie image-->
                            <img class="card-img-top" src="~/img/customer/movies/@item.ImgUrl" alt="@item.ImgUrl" />
                            <!-- Movie details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Movie name-->
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Movie reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <!-- Movie price-->
                                    <span class="text-muted text-decoration-line-through">@(item.Price * 1.2)</span>
                                    @item.Price
                                </div>
                                <div>
                                    <!-- Movie Start Date/End Date-->
                                </div>
                                <h5 class="text-muted text-decoration">@item.StartDate</h5>
                                <h5 class="text-muted text-decoration">@item.EndDate</h5>
                            </div>
                            <!-- Movie actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="https://localhost:7116/customer/home/moviedetails/@item.MoviesId">More Details</a></div>
                            </div>

                        </div>
                    </div>
                }   
            } 
            else
            {
                <div class="col mb-5">
					<h4 class="text-center">No Movies Found</h4>
				</div>
            }
        </div>
        <!-- Pagination-->
        <div class="d-flex justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (ViewBag.currentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="/customer/home/movies/?page=@(ViewBag.currentPage - 1)">Previous</a></li>
                    }
                    @for (int i = 1; i <= ViewBag.NumberOfMoviesPerPage; i++)
                    {
						if (i == ViewBag.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="/customer/home/movies/?page=@i">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="/customer/home/movies/page=@i">@i</a>
                            </li>
                        }
                    }
                    @if (ViewBag.currentPage != ViewBag.totalNumberOfPages && Model.movies.Any())
                    {
                        <li class="page-item"><a class="page-link" href="/customer/home/movies/?page=@(ViewBag.CurrentPage + 1)">Next</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</section>